digraph {
  rankdir=LR;
  bgcolor="transparent";
  pad=0.5;

  node [shape=box, style="rounded,filled", fillcolor="#f5f5f5", color="#673ab7", fontname="Helvetica", fontsize=11, margin="0.2,0.1"];
  edge [fontname="Helvetica", fontsize=9, color="#424242"];

  subgraph cluster_Payment {
    label="Payment";
    fontname="Helvetica Bold";
    fontsize=12;
    style="rounded";
    color="#673ab7";
    bgcolor="#fafafa";
    margin=16;

    Created;
    Authorized;
    Captured;
    PartiallyRefunded;
    FullyRefunded;
    Settled;

    Created -> Authorized;
    Authorized -> Captured;
    Captured -> PartiallyRefunded;
    Captured -> FullyRefunded;
    Captured -> Settled;
    PartiallyRefunded -> PartiallyRefunded;
    PartiallyRefunded -> FullyRefunded;
    PartiallyRefunded -> Settled;
    FullyRefunded -> Settled;
  }

}
